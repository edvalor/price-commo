{
  "version": 2,
  "builds": [
    {
      "src": "BACK/app.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "50mb" }
    },
    {
      "src": "FRONT/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/BACK/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "/FRONT/$1",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    }
  ]
}